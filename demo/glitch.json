{
    "install": "pip3.7 install --no-cache-dir --prefix=/tmp -r requirements.txt",
    "start": "PYTHONUNBUFFERED=true PYTHONPATH=/tmp/lib/python3.7/site-packages python3.7 advanced.py",
    "watch": {
      "ignore": [
        "\\.pyc$"
      ],
      "install": {
        "include": [
          "^requirements\\.txt$"
        ]
      },
      "restart": {
        "include": [
          "\\.py$",
          "^start\\.sh"
        ]
      },
      "throttle": 1000
    }
  }
  